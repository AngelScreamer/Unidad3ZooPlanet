@model ZooPlanet.Models.ViewModels.EspeciesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Editar Especies</h1>

<form method="post" action="~/Administrador/Editar">
    <input type="hidden" asp-for="Especies.Id" />
    <label>Nombre:</label>
    <input type="text" asp-for="Especies.Especie" required="required" />
    <label>Clase:</label>
    <select asp-for="Especies.IdClase" asp-items="@(new SelectList(Model.Clases, "Id","Nombre"))" required>
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input type="text" asp-for="Especies.Habitat" required="required" />
    <label>Peso:</label>
    <input type="number" asp-for="Especies.Peso" step="0.1" required="required" />
    <label>Tamaño:</label>
    <input type="number" step="0.1" asp-for="Especies.Tamaño" required="required" />
    <label>Observaciones:</label>
    <textarea id="txtDescripcion" required="required" asp-for="Especies.Observaciones"></textarea>

    @Html.ValidationSummary()

    <input type="submit" value="Guardar" id="btnGuardar" />
    <a href="~/Administrador">
        <input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" />
    </a>
</form>